<% include partials/_header %>


    <div class="container mt-5">
        <div class="row">
            <div class="col-md-5 offset-md-3 card">
                <div class="card-body">
                    <!-- <10 paso > -->
                    <form action="/update/<%= data.id %>" method="POST">
                        <!-- <10 paso > -->
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%= data.nombre %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidos" value="<%= data.apellidos %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="email" value="<%= data.email %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="telefono" value="<%= data.telefono %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="incha" value="<%= data.incha %>" class="form-control">
                        </div>
